<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:alpha="0.9"
    android:elevation="2dp"
    android:padding="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="tvTorTitle"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/teal_900"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/tvTorTitle"
            android:text="Size : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey_black_1000" />

        <TextView
            android:id="@+id/tvTorSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTorTitle"
            android:layout_toEndOf="@+id/textView2"
            android:text="679"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/indigo_900" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/textView2"
            android:text="Seeds : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_black_1000" />

        <TextView
            android:id="@+id/tvTorSeeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTorSize"
            android:layout_toEndOf="@+id/textView4"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/green_500" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTorSeeds"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/tvTorSeeds"
            android:text="Leeches : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_black_1000" />

        <TextView
            android:id="@+id/tvTorLeeches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/red_500" />

    </RelativeLayout>
</android.support.v7.widget.CardView>